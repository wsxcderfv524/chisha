/*分数显示*/
p{width:480rpx; margin:0 auto;
    font-family:Arial;font-weight:bold;
    font-size:40rpx; padding-top:15rpx;
}
/*Game Over*/
#gameOver{width:100%; height:100%;
    position:absolute; top:0; left:0;

}
#gameOver> .box{width:100%; height:100%;
    background-color:#555; opacity:.5;
}
#gameOver> .title{width:300rpx; height:200rpx;
    border:1rpx solid #edcf72;
    line-height:1.6em; text-align:center;
    background-color:#fff; border-radius:10rpx;
    position:absolute; top:50%; left:50%;
    margin-top:-135rpx; margin-left:-150rpx;
}
.button{padding:10rpx; border-radius:6rpx;
    background-color:#9f8b77; color:#fff;
    cursor:pointer;
}