
.conent{
    width: 100%;
    height:100%;
}
#gridPanel{width:480rpx;height:480rpx;
    margin:0 auto;
    background-color:#bbada0;
    border-radius:10rpx;
    position:relative;
}
.grid,.cell{width:100rpx; height:100rpx;
    border-radius:6rpx;
}
.grid{background-color:#ccc0b3;
    margin:16rpx 0 0 16rpx;
    float:left;
}
.score{
    margin-top: 200rpx;
    text-align: center;
    font-size: 60rpx;
}
.cell{
    /*margin:16rpx 0 0 16rpx;
